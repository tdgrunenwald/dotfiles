# Battery indicator
[battery]
interval=2

# Date
[date]
command=date '+%a, %d %b %Y'
interval=5

# Time
[time]
command=echo "<span weight=\"bold\">`date '+%I:%M:%S'`</span>"
interval=1
min_width='HH:MM:SS'
markup=pango
