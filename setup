#!/bin/sh
#
# Link all files or scripts that should be in other directories
#
# TODO: script must be executed from .config directory to work properly. It'd be nice if that wasn't the case...

# symlink home dir configs
for f in homedir/*; do ln -s ~/.config/$f ~/.$(echo $f | sed 's/homedir\///'); done

# symlink scripts to local scripts dir
# TODO: check for dirs .local/bin/ and create if they don't exist already
for f in scripts/*; do ln -s ~/.config/$f ~/.local/bin/$(echo $f | sed 's/scripts\///'); done
