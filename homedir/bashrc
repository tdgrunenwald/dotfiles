#!/usr/bin/env bash
# .bashrc
#

# source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

stty -ixon          # disable ctrl-s ctrl-q pause/resume behavior
shopt -s autocd     # auto cd to directory by just typing its name
shopt -so vi        # use vi mode
bind -m vi-insert "\C-l":clear-screen
bind -m vi-insert "\C-a":beginning-of-line

export GPG_TTY=$(tty)  # set current tty for gpg-agent

alias rm='rm -I -v'   # prompt once and show verbose output
alias grep='/bin/grep --color=auto'     # interpret ansi color codes if present
alias less='/bin/less -R'               # always interpret ansi color codes
alias ls='/bin/ls --color=auto --group-directories-first'
alias pls='/bin/ls --color=always -la | less -R'  # paged ls with color

# Base16 Shell
BASE16_SHELL="$HOME/.base16-manager/chriskempson/base16-shell/"
[ -n "$PS1" ] && \
	[ -s "$BASE16_SHELL/profile_helper.sh" ] && \
		eval "$("$BASE16_SHELL/profile_helper.sh")"

# display git branch in PS1
export PS1="\[\e[1;30;40m\]\T\n\[\e[1;37;40m\]\u@\h \w\$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/')\n\\\$ \[\$(tput sgr0)\]"
