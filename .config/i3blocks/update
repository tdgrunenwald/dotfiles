#!/bin/sh
# Tyler Grunenwald | github.com/tdgrunenwald
ICON="ï°µ"

# Sync xbps repo data with remote
sudo xbps-install -S > /dev/null

# Count the available updates
UCOUNT=`xbps-install -un | wc -l`

# If there are updates available, show notifier
if [ $UCOUNT -gt 0 ]; then
	echo "$UCOUNT $ICON"
	echo "$UCOUNT $ICON"
	echo "#FF8000"
fi
