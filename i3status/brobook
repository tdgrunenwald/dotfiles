# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	color_good = "#859900"
   	color_bad = "#dc322f"
	color_degraded = "#cb4b16"
	interval = 1
}

order += "ipv6"
order += "wireless _first_"
order += "volume master"
order += "battery all"
order += "disk /"
order += "cpu_usage"
order += "tztime local"

volume master {
	format = "  %volume"
	format_muted = "  %volume"
	device = "pulse"
}

ipv6 {
	format_up = "%ip"
	format_down = "no IPv6"
}

wireless _first_ {
	format_up = "  %essid (%ip)"
	format_down = " "
}

battery all {
	format = "%status %percentage (%remaining)"
	status_chr = " "
	status_bat = " "
	status_full = " "
	low_threshold = 20
	threshold_type = "time"
	hide_seconds = true
	integer_battery_capacity = true
}

tztime local {
	format = "%d %h %Y - %l:%M:%S %P"
}

cpu_usage {
	format = "  %usage"
	max_threshold = 95
	degraded_threshold = 80
}

disk "/" {
	format = "  %avail"
}
